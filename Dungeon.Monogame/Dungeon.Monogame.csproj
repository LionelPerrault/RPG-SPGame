<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
    <ApplicationIcon />
    <OutputType>WinExe</OutputType>
    <StartupObject />
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;Core;WINDOWS</DefineConstants>
    <Optimize>false</Optimize>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>
  <ItemGroup>
    <MonoGameContentReference Include="**\*.mgcb" />
  </ItemGroup>
  <ItemGroup>
    <MonoGameContentReference Remove="Content\Content.Android.mgcb" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Content\Content.Android.mgcb" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="MonoGame.Content.Builder" Version="3.7.0.4" />
    <PackageReference Include="MonoGame.Framework.DesktopGL.Core" Version="3.7.0.9" />
    <PackageReference Include="YAXLib" Version="2.15.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Dungeon12.Bowman\Dungeon12.Bowman.csproj" />
    <ProjectReference Include="..\Dungeon12.Servant\Dungeon12.Servant.csproj" />
    <ProjectReference Include="..\Dungeon12\Dungeon12.csproj" />
    <ProjectReference Include="..\Dungeon\Dungeon.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Content\Audio\Sound\Rogue.Classes.Servant\" />
    <Folder Include="ProjectMercury\" />
  </ItemGroup>
  <Import Project="$(SolutionDir)\NuGet.Common.props" />
  <Import Project="$(SolutionDir)\Symbols.props" />
  
  <ItemGroup>
    <MySourceFiles Include="$(SolutionDir)\**\**\Resources\*.*" />
  </ItemGroup>
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Copy SourceFiles="@(MySourceFiles)" DestinationFiles="@(MySourceFiles->'c:\wtf\%(RecursiveDir)%(Filename)%(Extension)')" />
  </Target>
</Project>